<link rel="stylesheet" href="https://unpkg.com/chota@latest">
<style>
  body.dark {
    --bg-color: #000;
    --bg-secondary-color: #131316;
    --font-color: #f5f5f5;
    --color-grey: #ccc;
    --color-darkGrey: #777;
  }
</style>
<script>
  if (window.matchMedia &&
      window.matchMedia('(prefers-color-scheme: dark)').matches) {
    document.body.classList.add('dark');
  }
</script>

<div class="container">
<div class="row">
<div class="col">
  <h1> Stream Archive </h1>
  <h2><%= @videos.name %></h2>
  <br>
  Streamed on <%= @videos.stream_date %>
  </div>
</div>

<div class="row">
  <div class="col">
    <video controls>
      <source src="<%= url_for(@videos.video_url) %>">
    </video>
  </div>
</div>
</div>
